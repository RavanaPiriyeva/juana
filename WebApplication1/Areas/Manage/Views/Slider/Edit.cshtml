@model Slider
@{

    ViewData["Title"] = "Edit";
}

<div class="container">

    <div class="row">
        <div class="col-md-8 mx-auto">
            <form asp-action="edit" method="post">
                <div class="mb-3">
                    <label asp-for="Title1" class="form-label">Title1</label>
                    <input asp-for="Title1" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Title1"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Title2" class="form-label">Title2</label>
                    <input asp-for="Title2" class="form-control">
                    <span class="text-danger" asp-validation-for="Title2"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Desc" class="form-label">Desc</label>
                    <input asp-for="Desc" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="BtnText" class="form-label">BtnText</label>
                    <input asp-for="BtnText" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="BtnText"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="BtnUrl" class="form-label">BtnUrl</label>
                    <input asp-for="BtnUrl" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="BtnUrl"></span>
                </div>
                @*<div class="mb-3">
                        <label asp-for="Image" class="form-label">Image</label>
                        <input asp-for="Image" type="text" class="form-control">
                        <span class="text-danger" asp-validation-for="Image"></span>
                    </div>*@
                <div class="mb-3">
                    <label asp-for="Order" class="form-label">Order</label>
                    <input asp-for="Order" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>