
@model List<Slider>;

@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <a asp-action="create" class="btn btn-primary">Create</a>
        </div>
        <div class="col-md-12 mx-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title 1</th>
                        <th scope="col">Title 2</th>
                        <th scope="col">Desc</th>
                        <th scope="col">BtnText</th>
                        <th scope="col">BtnUrl</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var auth in Model)
                    {
                        count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@auth.Title1</td>
                        <td>@auth.Title2</td>
                        <td width="400">@auth.Desc</td>
                        <td >@auth.BtnText</td>
                        <td>@auth.BtnUrl</td>
                        <td><img width="200" src="~/upload/slider/@auth.Image" /> </td>
                        <td >
                            <a asp-action="edit" asp-route-id="@auth.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="delete" asp-route-id="@auth.Id" class="btn btn-danger sweet-delete">Delete</a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
